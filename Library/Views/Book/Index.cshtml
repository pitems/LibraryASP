@model IEnumerable<Books>


<!DOCTYPE html>

<html>
<head>
    <title>Book</title>
</head>
<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Books</h1>
        <a href="#" class="btn btn-success rounded">
                    <i class="fas fa-plus"></i>Add
                </a>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="~/Assets/moffa.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.BookName</h5>
                        <p class="card-text">@item.AuthorName</p>
                        <a type="button" class="btn btn-primary" asp-controller="Book" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

</html>